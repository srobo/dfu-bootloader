/* Linker script for STM32F100x6, 32K flash, 4K RAM. */

/* Define memory regions. */
MEMORY
{
	/* Restrict the bootloader to the first 8k of flash */
	rom (rx) : ORIGIN = 0x08000000, LENGTH = 8K
	ram (rwx) : ORIGIN = 0x20000000, LENGTH = 10K
}

